	string str;
	char a;
	int x;
	while (file >> str)
	{
		int len = str.length();
		for(int i =0; i < len;i++)
		{
			a = str[i];
			if ((a - '0')<11 and (a - '0') >= 0)
			{
				x = a - '0';
				cout << x << " ";
			}
		}
	}
}




#include <iostream>
#include <cmath>
using namespace std;



int main() {
	string s = "AAAAAaaaaazzzZZZZZZbbZZZZZZZzzzbbbbbbb";
	int j = 0;
	for (int i = 0; i < s.length(); i++)
	{
		for (j = 0; j < s.length() - i - 1; j++)
		{
			float ind1;
			float ind2;
			if (s[j] > 96)
			{
				ind1 = (s[j]%1000) - 31.5;
			}
			else
			{
				ind1 = s[j] % 1000;
			}
			if (s[j+1] > 96)
			{
				ind2 = (s[j+1]%1000) - 31.5;
			}
			else
			{
				ind2 = s[j + 1] % 1000;
			}
			if (ind1 > ind2)
			{
				int tmp = s[j];
				s[j] = s[j + 1];
				s[j + 1] = tmp;
			}
		}
	}
	cout << s << endl;
	return 0;
}
